{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
          "@root/*": ["./*"],
          "@constants/*": ["./src/constants/*"],
          "@libs/*": ["./src/libs/*"],
          "@errors/*": ["./src/errors/*"],
          "@utils/*": ["./src/utils/*"],
        }
    },
    "exclude": [
        "node_modules"
    ],
}